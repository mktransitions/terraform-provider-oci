### Authentication details
export TF_VAR_tenancy_ocid="<tenancy OCID>"
export TF_VAR_user_ocid="<user OCID>"
export TF_VAR_fingerprint="<PEM key fingerprint>"
export TF_VAR_private_key_path="<path_to_OCI_API_key>"
## EXAMPLE - export TF_VAR_private_key_path="/home/opc/.ssh/oci_api_key.pem"

### Region
export TF_VAR_region="<region in which to operate, example: us-ashburn-1, us-phoenix-1>"

### Compartment
export TF_VAR_compartment_ocid="<compartment OCID>"

### Public/private keys used on the instance
export TF_VAR_ssh_public_key=$(cat <path to public key>)
## EXAMPLE - export TF_VAR_ssh_public_key=$(cat /home/opc/.ssh/id_rsa.pub)
export TF_VAR_ssh_private_key=$(cat <path to private key>)
## EXAMPLE - export TF_VAR_ssh_private_key=$(cat /home/opc/.ssh/id_rsa)

## Subnet OCID - set this to  your target network
export TF_VAR_SubnetOCID="<subnet OCID>"

## Subnet AD
export TF_VAR_AD="<AD>"
## Example - export TF_VAR_AD="1"

## Image OCID - Which image should be used for deployment
export TF_VAR_Image_OCID="<Image_OCID>"
